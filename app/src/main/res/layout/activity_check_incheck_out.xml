<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFA500"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".checkIncheckOut">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:elevation="24dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="231dp"
                android:layout_height="240dp"
                android:layout_marginStart="248dp"


                android:layout_marginTop="4dp"
                android:src="@drawable/group_22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="210dp"
                android:layout_height="138dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/final_logo11" />

            <LinearLayout
                android:layout_width="389dp"
                android:layout_height="470dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/final_logo_7"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.0">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Inventory Tracker"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_margin="16dp"
                    app:columnCount="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:orientation="horizontal"
                    app:rowCount="2"
                    tools:ignore="MissingClass">

                    <!-- Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"

                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/Morning_check_in"
                                android:layout_width="match_parent"
                                android:background="#A1D6B2"
                                android:text="Morning\nCheck in"
                                android:layout_height="match_parent"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/send_otp_back"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#A1D6B2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/Morning_check_out"
                                android:layout_width="match_parent"
                                android:background="#A1D6B2"
                                android:text="Morning\nCheck out"
                                android:layout_height="match_parent"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"

                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/Evening_check_in"
                                android:layout_width="match_parent"
                                android:background="#CEDF9F"
                                android:text="Evening\nCheck in"
                                android:layout_height="match_parent"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- Card 4 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CEDF9F"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/Evening_check_out"
                                android:layout_width="match_parent"
                                android:background="#CEDF9F"
                                android:text="Evening\nCheck out"
                                android:layout_height="match_parent"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
